@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "";
}

<link href="~/AdminAssets/myStyle.css" rel="stylesheet" />
<br />
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title" style="margin-top:10px;">
                    <span class="pull-left">AP Summary</span>
                </h3>
                <div class="form-inline float-sm-right">
                    <div class="form-group  mr-2">
                        <label>Date range: </label>
                        <div class="input-group  ml-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="far fa-calendar-alt"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control float-right" id="reservation">
                        </div>
                    </div>
                    <div class="form-group mr-2">
                        <button onclick="viewReport()" class="btn btn-outline-primary">View</button>
                    </div>
                    <div class="form-group">
                        <button id="btnDownload" class="btn btn-block btn-outline-secondary" onclick="tableToExcel('myTable_wrapper', 'AP Summary')"> <i class="fa fa-download"></i> Download</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div style="">
                    <table id="myTable" class="table table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>Payable Supplier</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody id="tblbody"></tbody>
                        <tfoot>
                            <tr>
                                <th>Payable Supplier</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>



            </div>
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/jsController/APSummaryControllerMin")
}
