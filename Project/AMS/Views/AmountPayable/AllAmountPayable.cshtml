<table id="myTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                Payment Ref
            </th>
            <th>
                Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
