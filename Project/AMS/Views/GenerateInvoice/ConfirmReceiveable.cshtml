@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<link href="~/AdminAssets/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />

<br />
<div class="row">
    <div class="col-sm-12">

        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title" style="margin-top:10px;">
                    <span class="pull-left">Confirm Receiveable Invoice</span>
                </h3>
                <button class="btn  btn-outline-success float-sm-right ml-2" onclick="saveConfirmInvoice()">Mark As Received</button>
                <div class="form-inline float-sm-right">
                    <div class="form-group  mr-2">
                        <label>Date range: </label>
                        <div class="input-group  ml-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="far fa-calendar-alt"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control float-right" id="reservation">
                        </div>
                    </div>
                    <div class="form-group mr-2">
                        @Html.DropDownList("Cust_Code", (List<SelectListItem>)ViewBag.AllCustomers,
                                           "--Select All Customer--", new { @required = "required", @class = "form-control select2" })
                    </div>
                    <div class="form-group mr-2">
                        <button onclick="viewReport()" class="btn btn-outline-primary">View</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div style="">
                    <table id="myTable" class="table table-bordered table-hover table-responsive" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Invoice Number
                                </th>
                                <th>
                                    Paid
                                </th>
                                <th>
                                    Invoice Amount
                                </th>
                                <th>Balance</th>
                                <th>Ticket Number</th>
                                <th>Passenger</th>
                                <th>
                                    Status
                                </th>
                                <th style="width:5%;">
                                    <input id="checkAll" class="RegisterChkboxtop" type="checkbox" /> all?
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tblBody"></tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>
                                    Invoice Amount
                                </th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>



@section Scripts{

    @Scripts.Render("~/jsController/ConfirmInvControllerMin")
}
