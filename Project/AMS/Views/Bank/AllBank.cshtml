@model IEnumerable<AMS.Models.Bank>

@{
    Layout = null;// "~/Views/Shared/_Layout.cshtml";
}

<table id="myTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Bank_ID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Bank_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 0;// Index start value
            foreach (var item in Model)
            {
                <tr id="@item.Bank_ID">
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Bank_ID)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank_Name)
                    </td>
                    <td>
                        @{
                            if (item.Status == true)
                            {
                                <label class="badge bg-success">Active</label>
                            }
                            else
                            {
                                <label class="badge bg-danger">Closed</label>
                            }
                        }
                    </td>
                    <td>
                        <button onclick="getById(this.id)" id="@item.Bank_ID" class="btn btn-primary btn-sm">Edit</button>
                        <button onclick="deleteById(this.id)" id="@item.Bank_ID" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                counter++;
            }
        }


    </tbody>
</table>

