@model AMS.Models.mvcModelIncome_Stream
@{ Layout = null; }

@using (Html.BeginForm("AddOrEdit", "IStream", FormMethod.Post,
    new { enctype = "multipart/form-data", id = "myForm", @class = "form-horizontal", role = "form", autocomplete = "off" }))
{
<div class="row">
    @*@Html.HiddenFor(x => x.Stream_ID)*@

    <div class="col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Stream_ID, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Stream_ID, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Enter Agent ID" } })
                @Html.ValidationMessageFor(model => model.Stream_ID, "", new { @class = "text-danger" })
            </div>
        </div>
    <div class="col-sm-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Stream_Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Stream_Name, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Enter Agent Name", data_plugin_maxlength = "data-plugin-maxlength", maxlength = "50" } })
            @Html.ValidationMessageFor(model => model.Stream_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Stream_Status, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.Stream_Status,
                                                                                                                                                                                             new List<SelectListItem> {new SelectListItem { Value = "" , Text = "--Select Status--",Selected=true },
                                            new SelectListItem { Value = "1" , Text = "Active" },
                                            new SelectListItem { Value = "0" , Text = "Close" }}, new { @class = "form-control select2", @required = "required" })
            @Html.ValidationMessageFor(model => model.Stream_Status, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
